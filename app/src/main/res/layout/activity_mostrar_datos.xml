<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MostrarDatosActivity">

    <TextView
            android:text="@string/mostrar_saludo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mostrarTextSaludo"
            android:textStyle="bold" android:textSize="46sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="104dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mostrarTextNombre"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="59dp"
            app:layout_constraintTop_toBottomOf="@+id/mostrarTextSaludo" android:textSize="24sp"
            android:text="Tu nombre" android:textAlignment="center"/>
    <TextView
            android:text="correo@correo.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mostrarTextCorreo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/mostrarTextNombre" android:textSize="24sp"
            android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>