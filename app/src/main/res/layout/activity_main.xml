<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/MainTextCurso">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/curso"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.121"
            android:textSize="36sp" android:textStyle="bold" app:layout_constraintHorizontal_bias="0.5"
            android:id="@+id/mainTextSaludo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="58dp"
            android:layout_height="61dp"
            android:clickable="true" app:srcCompat="@android:drawable/stat_notify_chat"
            android:id="@+id/mainFloSaludo"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.92" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp"/>
    <Button
            android:text="@string/btn_saludar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mainBtnAccion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintTop_toBottomOf="@+id/mainEditCorreo"
            android:layout_marginTop="12dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage"
            android:text="@string/edt_nombre"
            android:ems="10"
            android:id="@+id/mainEditNombre"
            app:layout_constraintTop_toBottomOf="@+id/mainTextSaludo"
            android:layout_marginTop="92dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/btn_mostrar_datos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mainBtnMostrarDatos"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/mainBtnAccion" android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/mainEditCorreo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp" android:layout_marginStart="2dp"
            app:layout_constraintTop_toBottomOf="@+id/mainEditNombre" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:text="correo@correo.com"/>
    <CheckBox
            android:text="CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/mainCheckBox" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mainBtnMostrarDatos"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="69dp"
            android:id="@+id/mainSpinnerColores"/>
    <Button
            android:text="Colores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/mainBtnColor" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/mainBtnMostrarDatos"
            app:layout_constraintHorizontal_bias="0.507"/>

</androidx.constraintlayout.widget.ConstraintLayout>